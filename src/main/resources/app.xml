<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
">

    <bean id="persona" class="com.pabloct.springbase.model.Persona">
        <property name="nombres" value="Pablo Arturo" />
        <property name="apellidos" value="Campos Tapia" />
    </bean>
    
    
    <!-- Valores Constructor -->
    <bean id="jara" class="com.pabloct.springbase.model.Musico" >
        <constructor-arg value="5" />
    </bean>
    
    <!-- Referencia en Constructor -->
    <bean id="instrumento" class="com.pabloct.springbase.model.Instrumento">
        <property name="nombre" value="Guitarra" />
        <property name="marca" value="Fender" />
    </bean>
    
    <bean id="slash" class="com.pabloct.springbase.model.Musico">
        <constructor-arg value="37"/>
        <constructor-arg ref="instrumento"/>
    </bean>


    <!-- Valores a travÃ©s de Setter -->
    <bean id="lennon" class="com.pabloct.springbase.model.Musico">
        <property name="nombres" value="Jhon" />
        <property name="apellidos" value="Lennon" />
        <property name="numeroCanciones" value="4" />
    </bean>
    
</beans>
